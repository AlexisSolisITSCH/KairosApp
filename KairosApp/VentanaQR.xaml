<Window x:Class="KairosApp.VentanaQR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KairosApp"
        mc:Ignorable="d"
        Title="Escanear Codigo QR" Height="410" Width="580" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Escanea el codigo QR para vincular la cuenta" 
                       FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10"/>
            <Image Name="imgQR" Width="250" Height="250" Stretch="Uniform" Margin="10"/>
            <TextBlock Text="Abre tu WhatsApp > Dispositivos Vinculados > Vincular Dispositivo"
                       FontSize="14" Foreground="Gray" TextAlignment="Center" Margin="40"/>
        </StackPanel>
    </Grid>
</Window>

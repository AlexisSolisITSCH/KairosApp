<Window x:Class="KairosApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KairosApp"
        mc:Ignorable="d"
        Title="Kairos eFact" Height="720" Width="1280"
        Background="#F4F4F4">
    <Grid Margin="10">
        <Border Background="White" Padding="15" CornerRadius="10" Margin="10">
            <StackPanel>
                <Button x:Name="BtnVincular" HorizontalAlignment="Right" Content="Iniciar Sesion" Click="BtnVincular_Click"
                        Width="100" Height="20" Margin="0,30,30,-30"/>
                <TextBlock Text="Kairos eFact" FontSize="24" FontWeight="Bold"
                            Foreground="#007ACC" HorizontalAlignment="Center"/>
                <!--Botones-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                            Margin="0, 10, 117, 0" Width="223">
                    <Button Content="Importar Contactos" Width="115" 
                            Height="25" Click="BtnImportar_Click"/>
                    <Button Content="Limpiar Lista" Width="100" Margin="10,0, 0,0"
                            Click="BtnLimpiar_Click"/>
                </StackPanel>

                <!--Barra de Busqueda-->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0, 5,190, 0">
                    <TextBox x:Name="txtBuscar" Width="300" Height="20"
                             KeyUp="TxtBuscar_Up"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, -20, 610, 0">
                    <TextBlock Text="Buscar Contacto:" FontSize="15"  HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="650,-20,0,0" Width="470">
                    <TextBlock Text="Redactar Mensaje" FontSize="16"/>
                    <TextBox x:Name="txtMensaje" AcceptsReturn="True" Height="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10, 50,0">
                    <TextBlock x:Name="ArchAdjunto" Width="360" Text="Ningun Archivo Adjunto" Margin="10,0,0,0"/>
                    <Button Content="Adjuntar Archivo" Width="100" Click="BtnAdjuntar_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 10, 50, 0">
                    <Button Content="Enviar Mensaje" Width="100" Click="BtnEnviar_Click"/>
                </StackPanel>


                <!--Lista de Contactos-->
                <DataGrid x:Name="dgContactos" AutoGenerateColumns="False" 
                          IsReadOnly="True" Height="469" 
                          Margin="200, -260, 550 ,375" Background="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
